<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Hello</display-name>

    <welcome-file-list>
        <welcome-file>/index.html</welcome-file>
		<welcome-file>/helloworld.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NotFoundServlet</servlet-name>
        <servlet-class>NotFoundServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NotFoundServlet</servlet-name>
        <url-pattern>/404</url-pattern>
    </servlet-mapping>
	
	 <servlet>
        <servlet-name>ServerErrorServlet</servlet-name>
        <servlet-class>ServerErrorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServerErrorServlet</servlet-name>
        <url-pattern>/500</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/404</location>
    </error-page>
	
	<error-page>
        <error-code>500</error-code>
        <location>/500</location>
    </error-page>

</web-app>